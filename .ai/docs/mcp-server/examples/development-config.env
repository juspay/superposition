# Development Configuration Example for Superposition MCP Server
# Optimized for local development with debugging enabled

# Required: Superposition API Configuration
SUPERPOSITION_API_URL=http://localhost:8080
SUPERPOSITION_API_TOKEN=dev-token-12345

# Workspace Configuration
SUPERPOSITION_DEFAULT_WORKSPACE=dev
SUPERPOSITION_DEFAULT_ORG=juspay

# Development Performance Settings (Fast feedback)
SUPERPOSITION_TIMEOUT=10
SUPERPOSITION_RETRY_ATTEMPTS=1
SUPERPOSITION_RETRY_DELAY=0.5
SUPERPOSITION_MAX_CONNECTIONS=5

# Development Caching (Short TTL for fresh data)
SUPERPOSITION_CACHE_TTL=60
SUPERPOSITION_CONFIG_CACHE_TTL=10
SUPERPOSITION_EXPERIMENT_CACHE_TTL=30
SUPERPOSITION_DIMENSION_CACHE_TTL=120

# Debug Settings
SUPERPOSITION_DEBUG=true
SUPERPOSITION_DEBUG_CONFIG=true
SUPERPOSITION_LOG_LEVEL=DEBUG
SUPERPOSITION_LOG_FORMAT=text

# Relaxed Security for Local Development
SUPERPOSITION_SSL_VERIFY=false

# Development Request Settings
SUPERPOSITION_REQUEST_QUEUE_SIZE=10
SUPERPOSITION_MAX_CACHE_SIZE=50MB