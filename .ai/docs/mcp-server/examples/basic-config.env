# Basic Configuration Example for Superposition MCP Server
# Copy this file to .env and update with your actual values

# Required: Superposition API Configuration
SUPERPOSITION_API_URL=https://api.superposition.example.com
SUPERPOSITION_API_TOKEN=your-bearer-token-here

# Workspace Configuration
SUPERPOSITION_DEFAULT_WORKSPACE=dev
SUPERPOSITION_DEFAULT_ORG=juspay

# Basic Performance Settings
SUPERPOSITION_TIMEOUT=30
SUPERPOSITION_RETRY_ATTEMPTS=3
SUPERPOSITION_RETRY_DELAY=1.0

# Caching (5 minutes for most operations)
SUPERPOSITION_CACHE_TTL=300

# Logging
SUPERPOSITION_DEBUG=false
SUPERPOSITION_LOG_LEVEL=INFO