# Production Configuration Example for Superposition MCP Server
# Optimized for production workloads with high availability

# Required: Superposition API Configuration
SUPERPOSITION_API_URL=https://prod-api.superposition.example.com
SUPERPOSITION_API_TOKEN=your-production-bearer-token

# Workspace Configuration
SUPERPOSITION_DEFAULT_WORKSPACE=production
SUPERPOSITION_DEFAULT_ORG=your-organization

# Production Performance Settings
SUPERPOSITION_TIMEOUT=60
SUPERPOSITION_RETRY_ATTEMPTS=5
SUPERPOSITION_RETRY_DELAY=2.0
SUPERPOSITION_MAX_CONNECTIONS=20
SUPERPOSITION_MAX_CONCURRENT_REQUESTS=15

# Production Caching Strategy
SUPERPOSITION_CACHE_TTL=600
SUPERPOSITION_CONFIG_CACHE_TTL=30
SUPERPOSITION_EXPERIMENT_CACHE_TTL=60
SUPERPOSITION_DIMENSION_CACHE_TTL=900
SUPERPOSITION_FUNCTION_CACHE_TTL=900
SUPERPOSITION_WORKSPACE_CACHE_TTL=1800

# Security Settings
SUPERPOSITION_SSL_VERIFY=true
SUPERPOSITION_SSL_CERT_PATH=/etc/ssl/certs/ca-bundle.crt

# Logging for Production
SUPERPOSITION_DEBUG=false
SUPERPOSITION_LOG_LEVEL=WARNING
SUPERPOSITION_LOG_FORMAT=json
SUPERPOSITION_LOG_FILE=/var/log/superposition-mcp.log

# Request Management
SUPERPOSITION_REQUEST_QUEUE_SIZE=200
SUPERPOSITION_REQUEST_QUEUE_TIMEOUT=60
SUPERPOSITION_MAX_CACHE_SIZE=500MB
SUPERPOSITION_MAX_REQUEST_SIZE=50MB

# Custom Headers for Tracking
SUPERPOSITION_CUSTOM_HEADERS={"X-Source": "mcp-server", "X-Environment": "production"}